{% extends 'layouts/base.html.twig' %}

{% block title %}Pinterest{% endblock %}

{% block body %}
<h1>{{ pluralize(pins|length, 'Pin') }}</h1>

    {% for pin in pins %}
    <article>
        <h2><a href="{{ path('app_pin_show', {id: pin.id}) }}">{{  pin.title}}</a></h2>
        <p>{{ pin.description|u.truncate(28, '...', false)}}</p>
        <p>Submitted {{ pin.createdAt|ago}}</p>
    </article>
    {% endfor %}

{% endblock %}
