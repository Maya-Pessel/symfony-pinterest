{% extends 'layouts/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="col-md-6 mx-auto">

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}<br><br>
                <a href="{{ path('app_logout') }}" class="btn btn-danger" >Logout</a>

            </div>
        {% endif %}

        {% if  app.user == false %}

        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="email">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="email" class="form-control" autocomplete="email" required autofocus>
        <label for="password">Password</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        <div class="text-center">
            <button class="btn btn-lg btn-primary mt-2" type="submit">
                Sign in
            </button>
        </div>
    </form>
</div>
    {% endif %}

{% endblock %}
